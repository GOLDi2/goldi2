{
    "name": "wide",
    "version": "1.0.0",
    "description": "Web IDE for GOLDi Remote Labs",
    "repository": {
        "type": "git",
        "url": "git://github.com/jonau/wide.git"
    },
    "scripts": {
        "copy-monaco": "copyfiles -u 3 -V 'editor-release/min/vs/**/*.*' dist/WIDE/monaco",
        "copy-dev-index": "copyfiles -u 1 src/index-dev.html dist/WIDE",
        "copy-index": "copyfiles -u 1 src/index.html dist/WIDE/",
        "copy-examples": "copyfiles -u 1 examples/**/*.* dist/WIDE/examples/",
        "copy-img": "copyfiles -u 1 img/* dist/WIDE/img/",
        "copy-all": "npm run copy-dev-index & npm run copy-index & npm run copy-examples & npm run copy-monaco & npm run copy-img",
        "rollup-wide": "rollup --config rollup.wide.config.js",
        "rollup-node_modules": "rollup --config rollup.node_modules.config.js",
        "rollup": "npm run rollup-wide && npm run rollup-node_modules",
        "setup-all": "npm run prepublishLanguages && npm run buildEditor && npm run rollup && npm run copy-all",
        "compile-languages": "mrmdir monaco-languages/release && tsc -p monaco-languages/src/tsconfig.json && tsc -p monaco-languages/src/tsconfig.esm.json",
        "prepublishLanguages": "npm run compile-languages && node ./bundle-lang",
        "buildEditor": "gulp release",
        "test-lang": "mocha --opts test-langgithub.com/jonau/wide/mocha.opts",
        "format": "prettier . --write",
        "lint": "eslint ."
    },
    "author": "Johannes Nau",
    "license": "GPL-3.0",
    "devDependencies": {
        "@polymer/lit-element": "^0.7.1",
        "@types/file-saver": "^2.0.0",
        "@types/jszip": "^3.1.5",
        "@types/rollup-plugin-node-resolve": "^4.1.0",
        "clean-css": "^4.2.1",
        "copyfiles": "^2.1.0",
        "event-stream": "3.3.4",
        "file-saver": "^2.0.2",
        "focus-trap": "^5.0.1",
        "gcc-output-parser": "0.0.4",
        "gulp": "^4.0.0",
        "gulp-typedoc": "^2.2.2",
        "http-server": "^0.11.1",
        "jsdom": "^13.2.0",
        "jszip": "^3.2.1",
        "material-components-web": "^1.1.1",
        "mocha": "^6.1.4",
        "monaco-css": "^2.5.0",
        "monaco-editor": "^0.17.0",
        "monaco-editor-core": "^0.17.0",
        "monaco-html": "^2.5.2",
        "monaco-json": "^2.5.1",
        "monaco-languages": "^1.7.0",
        "monaco-plugin-helpers": "^1.0.2",
        "monaco-typescript": "^3.4.1",
        "requirejs": "^2.3.6",
        "resize-observer-polyfill": "^1.5.1",
        "rimraf": "^2.6.3",
        "rollup": "^1.13.1",
        "rollup-plugin-commonjs": "^10.0.0",
        "rollup-plugin-ignore": "^1.0.5",
        "rollup-plugin-node-resolve": "^5.0.1",
        "rollup-plugin-postcss": "^2.0.3",
        "rollup-plugin-sass": "^1.2.2",
        "rollup-plugin-terser": "^5.2.0",
        "rollup-plugin-typescript2": "^0.21.0",
        "typedoc": "^0.16.9",
        "typescript": "3.3.3333",
        "uglify-js": "^3.4.9",
        "uncss": "^0.16.2",
        "vinyl": "^2.2.0"
    },
    "dependencies": {
        "@material/dialog": "^2.3.0",
        "@types/es6-promise": "^3.3.0",
        "jszip-utils": "0.0.2"
    }
}
