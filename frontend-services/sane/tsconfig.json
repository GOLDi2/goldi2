{
	"compilerOptions": {
		"lib": [
			"dom",
			"es6"
		],
		"sourceMap": false,
		"target": "es6",
		"module": "esnext",
		"removeComments": false,
		"preserveConstEnums": true,
		"noImplicitAny": false,
		"pretty": true,
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"]
		}
	},
    "include": [
		"src/**/*"
	],
	"exclude": [
		"src/sane-venn-diagram.ts",
		"src/sane-venn-diagram-svg.ts",
		"node_modules",
		"bower_components",
		"build",
		"doc"
	]
}
