{
    "compilerOptions": {
        "lib": ["ES6", "DOM"],
        "module": "ES6",
        "target": "ES6",
        "moduleResolution": "Node",
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "strict": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true
    }
}
