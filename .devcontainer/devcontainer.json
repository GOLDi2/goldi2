// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Crosslab",
	"image": "goldi-devcontainer:build",

	"runArgs": [
		// give all capabilities to a container, in other words, the container can then do almost everything that the host can do
        "--privileged",
		// forwarding all host machine ports
        "--net",
        "host",
		// mount connected USB devices to a container
        "-v",
        "/dev:/dev",
		// mount docker socker
		"-v",
		"/var/run/docker.sock:/var/run/docker.sock"
    ],

	"overrideCommand": false,

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.black-formatter",
				"ms-python.isort",
				"ms-python.vscode-pylan1ce",
				"ryanluker.vscode-coverage-gutters",
				"onatm.open-in-new-window"
			]
		}
	}

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
